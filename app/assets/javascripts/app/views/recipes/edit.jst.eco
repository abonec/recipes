<h1>Edit Recipe</h1>

<a data-type="back">Back</a>

<form>
  
  <label>
    <span>Title</span>
    <input 
      type="text" name="title" 
      value="<%= @title %>" required
 autofocus>
    <br />
  </label>
  
  <label>
    <span>Content</span>
    <textarea name="content" required> 
      <%= @content %>
    </textarea>
    <br />
  </label>
  
  <button>Edit</button>

</form>