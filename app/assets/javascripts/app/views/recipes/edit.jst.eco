<h1>Редактировать рецепт</h1>

<a data-type="back">Назад</a>

<form>
  
  <label>
    <span>Название</span>
    <input 
      type="text" name="title" 
      value="<%= @title %>" required
 autofocus>
    <br />
  </label>
  
  <label>
    <span>Содержание</span>
    <textarea name="content" required> 
      <%= @content %>
    </textarea>
    <br />
  </label>
  
  <button>Редактировать</button>

</form>