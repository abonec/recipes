<h1>Новый рецепт</h1>

<a data-type="back">Назад</a>

<form>
  
  <label>
    <span>Название</span>
    <input 
      type="text" name="title" 
      value="<%= @title %>" required
 autofocus>
    <br />
  </label>
  
  <label>
    <span>Содержание</span>
    <textarea name="content" required>
    </textarea>
    <br />
  </label>  
  <label>
    <span>Картинка</span>
    <input id="recipe_image" name="recipe[image]" type="file">
    <br />
  </label>
  
  <button>Создать</button>

</form>